{
  "manifest_version": 3,
  "name": "Review Sentiment Analyzer",
  "version": "0.1.0",
  "description": "Analyze Mercado Libre product reviews: sentiment graph, keyword cloud, CSV export",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.mercadolibre.com.co/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.mercadolibre.com.co/*"],
      "js": ["content.js"]
    }
  ]
}
